      ],
      "title": "ExtraOptionMultiValueSchemaType",
      "type": "object"
    },
    "ExtraOptionNumberSchemaType": {
      "additionalProperties": false,
      "description": "Float extra option schema.\n\nPython reads in JSON numbers as floats. The jsonschema library\nhandles precision issues with floats using a tolerance-based approach.",
